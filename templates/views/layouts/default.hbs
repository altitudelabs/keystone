		<![endif]-->
		
	</head>
	<body>
		<!-- header start !-->
		<nav id="header">
			<a href="/"><div class="nav-logo"></div></a>
			<ul class="nav-buttons">
				<li class="nav-button"><a href="/service">Service</a></li>
				<li class="nav-button"><a href="/keystory">Keystory</a></li>
				<li class="nav-button"><a href="/about">About</a></li>
				<li class="nav-button"><a href="/career">Career</a></li>
				<li class="nav-button"><a href="/contact">Contact</a></li>
			</ul>
		</nav>
		<!-- header end !-->

		<!--
			Flash messages allow you to display once-off status messages to users, e.g. form
			validation errors, success messages, etc
		-->
		{{#if messages}}
		<div id="flash-messages" class="container">
			{{#if messages.info}}
			<div class="alert alert-info">
					{{{flashMessages messages.info}}}
			</div>
			{{/if}}
			{{#if messages.success}}
			<div class="alert alert-success">
					{{{flashMessages messages.success}}}
			</div>
			{{/if}}
			{{#if messages.warning}}
			<div class="alert alert-warning">
					{{{flashMessages messages.warning}}}
			</div>
			{{/if}}
			{{#if messages.error}}
			<div class="alert alert-danger">
					{{{flashMessages messages.error}}}
			</div>
			{{/if}}
		</div>
		{{/if}}
		<!-- The content block should contain the body of your template's content-->
		{{{body}}}
		



		<div id="footer">
			<div class="footer-logo"></div>
			<div class="footer-line-separator"></div>
			<div class="footer-content">
				<div class="sns">
					<a href="#" class="twitter">
						<div class="icon"></div>
					</a>
					<a href="#" class="linkedin">
						<div class="icon"></div>
					</a>
					<a href="#" class="facebook">
						<div class="icon"></div>
					</a>
				</div>
				<span class="copyright">Â© 2015 Keystone. All Rights Reserved</span>
				<a href="/contact" class="contact">Contact</a>
				<a href="#" class="privacy">Privacy</a>
			</div>
		</div>






